{
  "name": "homie-bot",
  "version": "0.1.1",
  "description": "ðŸ¤– Home automation, yo!",
  "repository": "https://github.com/MaxMilton/homie-bot",
  "bugs": "https://github.com/MaxMilton/homie-bot/issues",
  "homepage": "https://github.com/MaxMilton/homie-bot#readme",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "bot",
    "home-automation",
    "maxmilton",
    "minna-ui",
    "node",
    "postcss",
    "sapper",
    "sqlite",
    "svelte",
    "web-app",
    "web-ui"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "static",
    "scripts"
  ],
  "scripts": {
    "dev": "NODE_ENV=development sapper dev",
    "build": "NODE_ENV=production sapper build ./dist",
    "serve": "NODE_ENV=production node ./dist",
    "_run": "yarn build && yarn serve",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:ts && yarn lint:md",
    "lint:css": "stylelint '**/*.{css,html,md}'",
    "lint:js": "eslint --ext html,js,md .",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:md": "remark --frail --quiet .",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "dependencies": {
    "better-sqlite3": "^5.4.0",
    "color-convert": "^1.9.3",
    "colorette": "^1.0.7",
    "compression": "^1.7.3",
    "polka": "^0.5.1",
    "sirv": "^0.2.2",
    "yeelight-awesome": "^1.0.12"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.8.5",
    "@types/better-sqlite3": "5.2.2",
    "@types/color-convert": "1.9.0",
    "@types/node": "10.12.21",
    "@wearegenki/renovate-config": "1.0.0",
    "chokidar": "2.1.0",
    "codecov": "3.1.0",
    "eslint": "5.12.1",
    "jest": "24.1.0",
    "minna-ui": "0.20.0",
    "postcss": "7.0.14",
    "postcss-scss": "2.0.0",
    "prettier": "1.16.1",
    "purgecss": "1.1.0",
    "remark-cli": "6.0.1",
    "rollup": "1.1.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-svelte": "5.0.1",
    "rollup-plugin-sucrase": "2.1.0",
    "rollup-plugin-terser": "4.0.3",
    "rollup-plugin-typescript": "1.0.0",
    "sapper": "0.24.2",
    "stylelint": "9.10.1",
    "svelte": "2.16.0",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.2.4"
  },
  "browserslist": {
    "production": [
      "extends @minna-ui/browserslist-config/modern"
    ],
    "development": [
      "extends @minna-ui/browserslist-config/dev"
    ]
  },
  "babel": {
    "presets": [
      "@minna-ui/jest-config/babel-preset.js"
    ]
  },
  "postcss": {
    "map": true,
    "syntax": "postcss-scss",
    "plugins": {
      "@minna-ui/postcss-config": {
        "debug": true
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "__sapper__/**",
    "dist/**",
    "test/coverage/**"
  ],
  "stylelint": {
    "extends": "@minna-ui/stylelint-config",
    "ignoreFiles": [
      "__sapper__/**",
      "dist/**",
      "test/coverage/**"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "@minna-ui/remarklint-config"
    ]
  },
  "jest": {
    "preset": "@minna-ui/jest-config",
    "collectCoverageFrom": [
      "src/**/*.{html,js,ts}"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">11.0.0",
    "yarn": ">1.12.0"
  },
  "os": [
    "!win32",
    "darwin",
    "freebsd",
    "linux",
    "openbsd"
  ]
}
