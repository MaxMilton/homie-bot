{
  "name": "home-control",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development yarn rollup --config && run-p dev serve:dev",
    "dev": "NODE_ENV=development rollup --config --watch",
    "build": "APP_RELEASE=$(git describe --always --dirty=\"-dev\") NODE_ENV=production rollup --config",
    "prebuild": "rm -rf dist && mkdir -p dist/client && cp -r static/* dist",
    "serve:dev": "NODE_ENV=development node dist/server.js",
    "serve": "NODE_ENV=production PORT=8080 node dist/server.js",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint **/*.{css,html} --cache",
    "lint:js": "eslint --ext html,js .",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "dependencies": {
    "better-sqlite3": "4.1.4",
    "colorette": "1.0.5",
    "polka": "0.5.1",
    "sirv": "0.2.2",
    "yeelight-awesome": "1.0.7"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.7.3",
    "@minna-ui/css": "link:../../minna-ui/css",
    "@minna-ui/eslint-config": "link:../../minna-ui/utils/eslint-config",
    "@minna-ui/jest-config": "link:../../minna-ui/utils/jest-config",
    "@minna-ui/postcss-config": "link:../../minna-ui/utils/postcss-config",
    "@minna-ui/select": "link:../../minna-ui/components/select",
    "@minna-ui/stylelint-config": "link:../../minna-ui/utils/stylelint-config",
    "@minna-ui/svelte-preprocess-markup": "link:../../minna-ui/utils/svelte-preprocess-markup",
    "@minna-ui/svelte-preprocess-style": "link:../../minna-ui/utils/svelte-preprocess-style",
    "@minna-ui/switch": "link:../../minna-ui/components/switch",
    "@minna-ui/tabs": "link:../../minna-ui/components/tabs",
    "@wearegenki/renovate-config": "1.0.0",
    "chokidar": "2.0.4",
    "codecov": "3.1.0",
    "eslint": "5.6.1",
    "jest": "23.6.0",
    "navaid": "1.0.0",
    "npm-run-all": "4.1.3",
    "postcss": "7.0.5",
    "postcss-scss": "2.0.0",
    "purgecss": "1.1.0",
    "rollup": "0.66.6",
    "rollup-plugin-commonjs": "9.1.8",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-svelte": "4.3.2",
    "stylelint": "9.6.0",
    "svelte": "2.13.5"
  },
  "resolutions": {
    "**/@minna-ui/css": "link:../../minna-ui/css"
  }
}
